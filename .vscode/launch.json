{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (App)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildapp",
            "program": "${workspaceRoot}/app/bin/Debug/netcoreapp2.1/app.dll",
            "args": [],
            "cwd": "${workspaceRoot}/app/bin/Debug/netcoreapp2.1",
            "stopAtEntry": false,
            "justMyCode": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            },
            "justMyCode": false
        },
        {
            "name": ".NET Core Launch (Tests)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildtests",
            "program": "${workspaceRoot}/Laravel.Tests/bin/Debug/netcoreapp2.1/app.dll",
            "args": [],
            "cwd": "${workspaceRoot}/Laravel.Tests",
            "stopAtEntry": false,
            "justMyCode": false,
            "externalConsole": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
{
    "name": "Laravel.Tests",
    "require": {
        "phpunit/phpunit": "^8.1",
        "mockery/mockery": "^1.2",
        "orchestra/testbench": "^3.8"
    },
    "replace": {
        "laravel/framework": "*",
        "nesbot/carbon": "*"
    },
    "scripts": {
        "post-autoload-dump": [
            "find patches -type f -name '*.patch' -print0 | sort -z | xargs -t -0 -n 1 patch -p0 -i"
        ]
    }
}
